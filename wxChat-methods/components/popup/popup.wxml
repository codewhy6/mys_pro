<!--components/popup/popup.wxml-->
<!-- label="描述信息描述信息描述信息描述信息" label-class="labelCls" -->
<van-cell title="{{title}}" title-width="200rpx" is-link value="{{value}}"
  value-class="{{value1==value2?'valCls':'valCls2'}}" data-pickertype="{{pickertype}}" data-currentkey="{{currentkey}}"
  required="{{required}}" bind:click="openPicker" use-label-slot>
  <block wx:if="{{errFlag}}">
    <view slot="label" class="labelCls" wx:if="{{ errorMsgFlag }}">
      <text>{{errorMsg}}</text>
    </view>
  </block>
</van-cell>
<!-- 选择器 -->
<van-popup show="{{ pickerVisible }}" position="bottom" round>
  <van-picker columns="{{ pickerList[pickertype].data }}" active-class="activeCls" bind:confirm="onSelect"
    bind:cancel="closePicker" show-toolbar title="{{pickerList[pickertype].title}}" value-key="text" default-value="" />
</van-popup>