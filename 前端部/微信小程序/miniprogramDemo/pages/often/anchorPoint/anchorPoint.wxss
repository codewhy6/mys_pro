/* pages/anchorPoint/anchorPoint.wxss */
.wrap {
  background-color: #ccc;
  display: flex;
}
.left {
  width: 30%;
}
.left-item {
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}
.right {
  width: 70%;
}
.right-item {
  width: 100%;
  height:900rpx;
  margin-bottom:-1rpx;
  box-sizing: border-box;
  border:1px solid red;
}
.activeLeft {
  background-color: #fff;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}